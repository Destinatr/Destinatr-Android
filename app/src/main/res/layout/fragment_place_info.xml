<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="io.lassondehacks.destinatr.fragments.PlaceInfoFragment">


    <android.support.v7.widget.CardView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingTop="15dp" android:paddingLeft="10dp"
                android:paddingRight="10dp" android:paddingBottom="15dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    <TextView
                            android:id="@+id/titleText"
                            android:text="Centre de Foire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cast_intro_overlay_background_color" android:textSize="17sp"/>
                    <TextView
                            android:id="@+id/addressText"
                            android:text="1991, rte Louis-Cyr St-Jean de Matha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_below="@+id/titleText"/>
                    <TextView
                            android:text=""
                            android:id="@+id/routeTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_below="@+id/addressText"
                            android:textStyle="normal|bold"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:layout_weight="0"
                        android:layout_marginRight="10dp">

                    <android.support.design.widget.FloatingActionButton
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            app:fabSize="normal" app:srcCompat="@drawable/ic_directions_car_black_24dp"
                            android:id="@+id/startRouteButton"
                            app:backgroundTint="@color/colorPrimary"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
